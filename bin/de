#!/bin/bash

if [ ! -f "$PWD/.env" ]; then
	echo ".env file does not exist, exiting!"
	exit 1
fi

set -o allexport
source $PWD/.env
set +o allexport
test -t 0 && USE_TTY="-t"

CONTAINER_NAME=$1
CONTAINER_PROJECT_ROOT=/var/www/html
shift

docker exec -i ${USE_TTY} $envs -w $CONTAINER_PROJECT_ROOT ${PROJECT_NAME}_${CONTAINER_NAME} "$@"
